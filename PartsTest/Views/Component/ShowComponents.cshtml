<div class="container">
  
    <h3>List of Components</h3>

    <div class="col-md-4 alert alert-info top10" role="alert" >To edit component click on the table row. </div>

    <div class="top10">
   
        <table class="table table-condensed table-hover ">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>              
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr class="componentTableRow" ng-repeat="Com in Components" ng-click="editComponent(Com.Id)">

                    <td>{{Com.Name}}</td>
                    <td>{{Com.Type}}</td>
                    <td>{{Com.Price}}</td>          
                    <td ng-click="$event.stopPropagation()"><a ng-click="deleteComponent(Com.Id)">Delete</a></td>
                </tr>
            </tbody>
        </table>

    </div>
        <div class="error">{{error}}</div>
    </div>

  